@page
@model TGL.WebApp.Pages.Students.AddModel
@{
    ViewData["Title"] = "Add";
}

<h1>Add</h1>

<form method="post">
    <div class="form-group">
        <label>Name</label>
        <input asp-for="Student.Name" />
    </div>
    <div class="form-group">
        <label>LastName</label>
        <input asp-for="Student.LastName" />
    </div>
    <div class="form-group">
        <label>Age</label>
        <input asp-for="Student.Age" />
    </div>
    <div class="form-group">
        <label>Nit</label>
        <input asp-for="Student.Nit" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>


<a asp-page="./Index" role="button" class="btn btn-success">Return to list</a>
